{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "downlevelIteration": true,
    "listEmittedFiles": true,
    "listFiles": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "pretty": true,
    "removeComments": true,
    "rootDir": "src",
    "strict": true,
    "stripInternal": true,
    "target": "ES2022"
  },
  "exclude": ["node_modules", "dist", "src/**/__tests__"]
}
